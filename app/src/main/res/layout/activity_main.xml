<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg" />

    <ImageView
        android:id="@+id/cing"
        android:layout_width="400dp"
        android:layout_height="380dp"
        />

    <TextView
        android:id="@+id/awal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Cat Lovers!"
        android:layout_marginLeft="90dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/awal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Cat Lovers App!!"
        android:layout_marginLeft="90dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="125dp"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cing"
        android:text="L O G I N"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
       />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/round"
        android:hint="Masukan Email Anda"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="15dp"
        android:textSize="14sp"
        android:backgroundTint="#D54D35"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"/>


    <EditText
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:hint="Masukan Password Anda"
        android:drawableStart="@drawable/baseline_password_24"
        android:drawablePadding="15dp"
        android:textSize="14sp"
        android:backgroundTint="#D54D35"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"/>

    <CheckBox
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="60dp"
        android:text="Remember Me"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"
        android:text="Forgot password?"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgot"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:backgroundTint="#D54D35"
        tools:ignore="RtHardcoded"/>

    <TextView
        android:id="@+id/registrasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button"
        android:text="Don't have an account? Register here"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

</RelativeLayout>